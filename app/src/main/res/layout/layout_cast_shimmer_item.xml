<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        android:layout_width="128dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/shimmerColor"
                android:layout_width="match_parent"
                android:layout_height="144dp"/>

            <TextView
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Bold"
                tools:text="Name"
                android:background="@drawable/text_shimmer_background"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_shimmer_background_small"
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Regular"
                tools:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="128dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/shimmerColor"
                android:layout_width="match_parent"
                android:layout_height="144dp"/>

            <TextView
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Bold"
                tools:text="Name"
                android:background="@drawable/text_shimmer_background"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_shimmer_background_small"
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Regular"
                tools:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        android:layout_width="128dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@color/shimmerColor"
                android:layout_width="match_parent"
                android:layout_height="144dp"/>

            <TextView
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Bold"
                tools:text="Name"
                android:background="@drawable/text_shimmer_background"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_shimmer_background_small"
                style="@style/TextAppearance.Movies.Text.Small.HighEmphasis.Regular"
                tools:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>