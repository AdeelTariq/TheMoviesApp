<resources>

    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:popupMenuStyle">@style/Theme.Movies.Popup</item>
    </style>

    <style name="Theme.Movies.Popup" parent="Theme.Movies">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:popupElevation">80dp</item>
    </style>

    <style name="Theme.Movies.Overlay" parent="Theme.Movies">
        <item name="colorControlNormal">@color/toolbarIconColor</item>
        <item name="colorControlActivated">@color/toolbarIconColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="searchViewStyle">@style/Widget.Movies.SearchView</item>
        <item name="homeAsUpIndicator">@drawable/ic_close</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Theme.Movies.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/textButtonColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>


    <style name="Widget.Movies.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Movies</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="titleTextAppearance">@style/TextAppearance.Movies.Toolbar</item>
    </style>

    <style name="TextAppearance.Movies.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
    </style>

    <style name="Widget.Movies.Button.TextButton"
           parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconTint">@color/toolbarIconColor</item>
        <item name="iconPadding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>


    <style name="Widget.Movies.Button.DialogButton"
           parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">@color/textButtonColor</item>
    </style>


    <style name="TextAppearance.Movies.Text.Small.HighEmphasis.Regular"
           parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Movies.Text.Small.HighEmphasis.Bold"
           parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Movies.Text.Small.HighEmphasis.MediumBold"
           parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Movies.Text.Small.MediumEmphasis.Regular"
           parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Movies.Text.Medium.HighEmphasis.Bold"
           parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Movies.Text.Medium.HighEmphasis.Regular"
           parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="TextAppearance.Movies.Text.Medium.HighEmphasis.MediumBold"
           parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="Widget.Movies.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Movies.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="goIcon">@drawable/ic_search</item>
        <item name="queryBackground">@drawable/search_view_background</item>
        <item name="submitBackground">@drawable/search_view_background</item>
    </style>

</resources>
